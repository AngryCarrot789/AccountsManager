<Window x:Class="AccountsManager.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountsManager.Login"
        mc:Ignorable="d"
        x:Name="LoginWin"
        Height="275" Width="500"
        Style="{DynamicResource CustomToolWindowStyle}">
    <Grid Margin="20">
        <Label Content="Accounts Manager" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>
        <Grid Margin="0,52,0,0" VerticalAlignment="Top">
            <Label Content="Enter Password:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24"/>
            <PasswordBox Name="PasswordInput" VerticalContentAlignment="Center" VerticalAlignment="Center" 
                         Padding="5" FontSize="22" Height="42" Margin="181,0,0,0">
                <PasswordBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding ShowPasswordCommand}"/>
                </PasswordBox.InputBindings>
            </PasswordBox>
        </Grid>
        <Button Command="{Binding ShowPasswordCommand}" Content="Login" Margin="0,104,0,0"/>
    </Grid>
</Window>
